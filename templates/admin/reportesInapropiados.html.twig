{% block title %}L4P{% endblock %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col-12 mt-3 ">
            <div class="row ">
                <div class="col-6 text-lg-start text-center mb-3">
                <a class="text-start h3 quitara" href="http://127.0.0.1:8000/admin/menuReportes"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
