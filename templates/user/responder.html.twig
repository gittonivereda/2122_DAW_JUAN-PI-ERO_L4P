{% extends 'baseIndex.html.twig' %}

{% block title %}L4P{% endblock %}

{% block body %}
<div class="container borderR">
        <div class="row">
            <div class="col-12">
                <div class="card fondoPost">
                <div class="card-header bordeY">
                    <button class="quitarb"  data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Post a contestar</button>
                    <div class="collapse" id="collapseExample" style="background-color:#535c65 m-0">
                    <div class="card-body">
                        <div class="d-flex my-3 pb-5 ">
                            <div class="flex-shrink-0">
                            {% if postAContestar.idUser.foto %}
                                <img src="{{postAContestar.idUser.displayPhoto()}}" width="64" alt="">
                            {% else %}
                                <img src="{{ asset('uploads/pngwing.com(1).png') }}" width="64" alt="">
                            {% endif %}
                  
                   
                            </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex">
                                <p class="fw-bold agrandar">{{postAContestar.idUser.nombre}} {% if postAContestar.idUser.verificado %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-patch-check-fill color-primary ms-2"  viewBox="0 0 16 16">
                                    <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01-.622-.636zm.287 5.984-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708z"/>
                                    </svg>
                                {% endif %}
                                <small class="text-muted ms-4 me-5">{{postAContestar.fecha.format("Y-m-d H:i:s")}}</small>
                                </p>
                                <strong class="text-end ms-5">{{postAContestar.idJuego.nombre}}</strong>
                                <img src="{{postAContestar.idJuego.displayPhoto()}}" class="ms-5" width="50px" height="50px">
                                
                             </div>
                            <p>{{postAContestar.contenido}}</p>
                            {% if postAContestar.foto %}
                            <img src="{{postAContestar.displayPhoto()}}" data-bs-toggle="modal" data-bs-target="#modal{{postAContestar.id}}" width="300px" height="250px">
                            <div class="modal fade " id="modal{{postAContestar.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <img src="{{postAContestar.displayPhoto()}}" alt="">
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                            <div class="mt-3 d-flex">    
                        </div>
                    </div>
                </div>
                </div>
                
                
        </div>
        {{ form_start(form ) }} 
      
                {{ form_end(form) }}
    </div>



                
{% endblock %}