{% extends 'baseIndex.html.twig' %}

{% block title %}L4P{% endblock %}

{% block body %}

  <div class="container ">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col col-12 pb-5">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #535c65; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column " style="width: 150px;">
             
                    {% if user.foto %}
                        <img src="{{user.displayPhoto()}}"
                        alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                        style="width: 150px; z-index: 1">
                  
                  {% else %}
                       <img src="{{ asset('uploads/pngwing.com(1).png') }}"
                        alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                        style="width: 150px; z-index: 1">
                  {% endif %}
                <div style="z-index: 1; ">
                        <button data-bs-toggle="modal" data-bs-target="#exampleModal2" type="button" class="btn quitara" data-mdb-ripple-color="dark"
                        style="z-index: 1; padding-top:10px;">
                        Editar perfil
                    </button>
                    <button data-bs-toggle="modal" data-bs-target="#exampleModal" type="button" class="btn quitara mt-2" data-mdb-ripple-color="dark"
                        style="z-index: 1; padding-top:10px;">
                        Postear
                    </button>
                
                </div>
              
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5><strong>{{user.username}}</strong></h5>
              <p>{{user.nombre}}</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #2f3337;" >
            {% if user.descripcion %}
                <p style="margin-left:200px">{{user.descripcion}}</p>
            {% endif %}
            
            <div class="d-flex justify-content-end text-center py-4" style="" >
              <div>
                {% if user.verificado %}

